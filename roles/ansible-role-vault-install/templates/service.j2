[Unit]
Description=Vault secret management tool service
Documentation=https://vaultproject.io/docs/
Requires=network-online.target
After=network-online.target

[Service]
User={{ vault_user }}
Group={{ vault_group }}
PermissionsStartOnly=true
ExecStartPre=-/bin/mkdir -p /var/run/{{ vault_service }}
ExecStartPre=/bin/chown -R {{ vault_user }}:{{ vault_group }} /var/run/{{ vault_service }}
ExecStart={{ vault_bin_path }}/vault server -config={{ vault_conf }} -log-level=debug
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
RestartSec=42s
LimitMEMLOCK=infinity

[Install]
WantedBy=multi-user.target
